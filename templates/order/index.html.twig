{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - FlowerStore{% endblock %}

{% block content %}
    <h2>Je passe ma commande</h2>
    <p> choisissez vos préférences avant de passer commande sur FlowerStore</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form0, {action : path('app_order_recap')}) }}
                    {{form_label(form0.addresses, 'Choisissez votre adresse de livraison')}}
                    <a href="{{path('app_account_address_add')}}"> Ajouter une nouvelle adresse </a>
                {{ form_end(form0) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br/>'})|raw}}
            
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b> Récap de ma commande </b>
                <p> Retrouvez le récap de votre commande </p>
            </div>
            <div class="order-summary">
                {% for key,product in  cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2 mt-1"> <img src="uploads/images/{{product.product.illustration}}" alt="{{product.product.name}}" height="70px"> </div>
                        <div class="col-8 my-auto"> {{ product.product.name }} {#<small> {{product.product.subtitle}}</small>#} </div>
                        <div class="col-2 my-auto"> x {{product.quantity}} &nbsp; <br />  </div>   
                    </div>
                {% endfor %}
            </div>
            <b> Bouton pour payer </b>
        </div>
    </div>
    
{% endblock %}

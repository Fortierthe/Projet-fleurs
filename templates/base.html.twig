    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none; 
            user-select: none;
        }

        .image-container {
            position: relative;
            overflow: hidden;
            width: 260px;
            height: 260px;
        }
        
        .image-container svg {
            width: 210px;
            height: 210px;
        }
        
        .image-container:hover svg {
            width: 140px;
            height: 140px;
            transition: width 0.3s ease-in-out, height 0.3s ease-in-out;
        }
        
        .overlay {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            padding: 20px;
            color: black;
            transition: top 0.3s ease-in-out;
            z-index: -1; /* Place le contenu en dessous de l'image */
        }
        
        .image-container:hover .overlay {
            top: 50%;
        }
        
        
        
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
